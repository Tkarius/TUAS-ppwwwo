doctype html
var title = 'Comic Reviewer'
html
  head
    title= title
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')
    script(src='https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.min.js')
    script(src='/javascripts/form_validation.js')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav(class='navbar fixed-top navbar-expand-lg navbar-dark', id='navigation')
      a(class='navbar-brand', href='#') #{title}
      button(class='navbar-toggler', data-toggle="collapse", data-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
        span(class='navbar-toggler-icon')
      div(class='collapse navbar-collapse', id='navbarSupportedContent')
        ul(class='navbar-nav mr-auto')
          li(class='nav-item active')
            a(class='nav-link', href='/') Home
          li(class='nav-item')
            a(class='nav-link', href='#') Browse Comics
          if user !== undefined && user.username !== undefined
            li(class='nav-item')
              a(class='nav-link', href='#') Add comic
        ul(class='navbar-nav')
          if user === undefined && user.username === undefined
            li(class='nav-item')
              a(class='nav-link', href='/users/register')
                span(class='glyphicon glyphicon-user') Sign up
            li(class='nav-item')
              a(class='nav-link', href='#')
                span(class='glyphicon glyphicon-log-in') Login
          else
            li(class='nav-item')
              a(class='nav-link', href='#')
                span(class='glyphicon glyphicon-log-in') Logout
    div(class='jumbotron jumbotron-fluid', id='top-banner')
      h1(class='display-1') #{pageTitle}
        p(class='lead') #{pageDescription}
    div(class='container-fluid')
      block content
