doctype html
html
  head
    title= title
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav(class='navbar navbar-expand-lg navbar-dark navbar-fixed-top', id='navigation')
      a(class='navbar-brand', href='#') #{title}
      button(class='navbar-toggler', data-toggle="collapse", data-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
        span(class='navbar-toggler-icon')
      div(class='collapse navbar-collapse', id='navbarSupportedContent')
        ul(class='navbar-nav mr-auto')
          li(class='nav-item active')
            a(class='nav-link', href='#') Home
          li(class='nav-item')
            a(class='nav-link', href='#') Browse Comics
          li(class='nav-item')
            a(class='nav-link', href='#') Add comic
      ul(class='navbar-nav')
        li(class='nav-item')
          a(class='nav-link', href='#')
            span(class='glyphicon glyphicon-user') Sign up
        li(class='nav-item')
          a(class='nav-link', href='#')
            span(class='glyphicon glyphicon-log-in') Login
        li(class='nav-item')
          a(class='nav-link', href='#')
            span(class='glyphicon glyphicon-log-in') Logout
    div(class='jumbotron jumbotron-fluid', id='top-banner')
      h1(class='display-1') #{pageTitle}
        p(class='lead') #{pageDescription}
        hr(class='my-4')
    div(class='container')
      block content
